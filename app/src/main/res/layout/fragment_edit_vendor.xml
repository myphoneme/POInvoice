<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Vendor Name"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <EditText
            android:padding="5dp"
            android:id="@+id/vendor_name"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:hint="Iris Global Services Pvt Ltd."
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:background="@drawable/edit_bg"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Addres"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <EditText
            android:padding="5dp"
            android:id="@+id/address"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:hint="1 Bypass Road Mahipalpur, New Delhi-110037"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:background="@drawable/edit_bg"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <EditText
            android:padding="5dp"
            android:id="@+id/email"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:hint="Enter email"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:background="@drawable/edit_bg"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="State"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <Spinner
            android:layout_alignParentRight="true"
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:entries="@array/india_state"
            android:imeOptions="actionNext" />

<!--        <EditText-->
<!--            android:padding="5dp"-->
<!--            android:id="@+id/address_line3"-->
<!--            android:layout_width="230dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:hint="No. B-614, 6th Floor, Advant Navis,"-->
<!--            android:textSize="12sp"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:background="@drawable/edit_bg"-->
<!--            />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="GSTIN"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <EditText
            android:padding="5dp"
            android:id="@+id/gstin_no"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:hint="07AACCI0718A2Z8"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:textSize="12sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PAN"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <EditText
            android:padding="5dp"
            android:id="@+id/pan"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:hint="Enter PAN"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:textSize="12sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/upload_image_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Upload Image:"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/upload"
            android:layout_toRightOf="@+id/upload_image_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:text="Choose file"/>

        <ImageView
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@drawable/logopngphoneme"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:visibility="gone"
            android:id="@+id/reset"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/text_white"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:text="Reset"/>
        <Button
            android:id="@+id/submit"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/text_white"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:text="Submit"/>
    </LinearLayout>
</LinearLayout>