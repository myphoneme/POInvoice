<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Client Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/client_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:hint="Name"
            android:padding="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Website"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/website_url"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:hint=""
            android:padding="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Address"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/address"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:hint="Enter address"
            android:padding="5dp"
            android:textSize="12sp"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Email"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:hint="Enter email"
            android:padding="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="State"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/india_state"
            android:imeOptions="actionNext" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="GSTIN"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/gstin_no"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:hint="Enter GSTIN"
            android:padding="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PAN"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pan"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:hint="Enter PAN"
            android:padding="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/upload_image_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Upload Image:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/upload"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/upload_image_text"
            android:text="Choose file"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:src="@drawable/logopngphoneme" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:visibility="gone" />

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />
    </LinearLayout>
</LinearLayout>